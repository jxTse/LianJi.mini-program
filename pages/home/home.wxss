/* 分类滑块样式 */
.major{
    margin: 20rpx 2.5%; 
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    border: 1rpx solid #efefef;
    border-radius: 28rpx;
    box-shadow: 1rpx 1rpx 15rpx #ddd;
}
.majorCon{
    display: flex;
    flex-direction: row;
}
.major .pic{
    width: 90rpx;
    height: 90rpx;
}
.major .box{
    text-align: center;
    padding: 20rpx 26rpx;
    width: 100rpx;

}
.major .txt{
    font-size: 23rpx;
}

/* 卡片样式 */
.c-item{
    margin: 2.5%; 
    padding: 15rpx;
    border: 1rpx solid #efefef;
    border-radius: 28rpx;
    box-shadow: 1rpx 1rpx 15rpx #ddd; 
    display: flex;
    flex-direction: row;
}

.c-images image{
    width: 150rpx;
    height: 150rpx;
    display: block;
    border-radius: 8rpx;
    border: 1rpx solid #fefefe;
}

.info{
    justify-content: space-around;
    margin-left: 15rpx;
    display: flex;
    flex-direction: column;
}

.viewTitle{
    display: block;
    font-size: 38rpx;
    color: #3F51B5;
    margin-left: 10rpx;
    margin-bottom: 10rpx;
  }

  .viewDis{
    display: inline-block;
    font-size: 26rpx;
    color: gray;
    margin-left: 10rpx;
  }