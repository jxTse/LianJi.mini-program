/* 搜索栏样式 */
.search{
    display: flex;
    flex-direction: row;
    height: 75rpx;
    margin: 18.75rpx; 
    border: 1rpx solid #efefef;
    border-radius: 28rpx;
    box-shadow: 1rpx 1rpx 15rpx #ddd;
}

.ipt{
    padding: 15rpx 20rpx;
    width: 80%;
    height: 40rpx;

}

.searchButton image{
    height: 60rpx;
    width: 60rpx;
    margin: 7rpx;
}

.searchRes{
    margin: 2.5%;
    padding: 15rpx 20rpx;
    margin-top: -18rpx;
    border: 1rpx solid #f1f1f1;
    display: flex;
    flex-direction: column;
    border-bottom-left-radius: 8rpx;
    border-bottom-right-radius: 8rpx;
}

